# This is Git's per-user configuration file.
[user]
# Please adapt and uncomment the following lines:
	name = Kotmin
	email = 70173732+Kotmin@users.noreply.github.com
    signingkey = ~/.ssh/id_ed25519.pub
  
[gpg]
  format = ssh

[commit]
  gpgsign = true

[gpg "ssh"]
  allowedSignersFile = ~/.config/git/allowed_signers


[init]
    defaultBranch = main

[rerere]
	enabled = true
	
[gitbutler]
	signCommits = true

[maintenance]
    auto = false
    strategy = incremental

[core]
    editor = vim

[alias]
	staash = stash --all
	serve = !git daemon --reuseaddr --verbose --base-path=. --export-all ./.git
    unstage = reset HEAD
    lol = log --pretty=oneline --abbrev-commit --graph --decorate
    branches = !git-branches
    st = status
	plog = log --graph --pretty='%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%ad) %C(bold blue)<%an>%Creset'
    pristine = !git reset --hard && git clean -dff
    smu = submodule update --init --recursive
    sms = submodule status
    sma = submodule add

[pull]
    rebase = true
    recurseSubmodules = on-demand

[push]
    autoSetupRemote = true
    recurseSubmodules = on-demand
    followTags = true

[fetch]
    recurseSubmodules = on-demand
    parallel = 8
    fsckObjects = true 

[transfer]
    fsckObjects = true

[submodule]
    recurse = true
    fetchJobs = 4


[checkout]
    recurseSubmodules = true

[switch]
    recurseSubmodules = true

[merge]
    recurseSubmodules = on-demand

[rebase]
    autoStash = true 

[status]
    submoduleSummary = true

[diff]
    submodule = log

[color]
    ui = true

[help]
    autocorrect = 1


[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process


[includeIf "gitdir:/Coding/"]
    path = ~/.dotfiles/git/Coding/.gitconfig
[includeIf "gitdir:/Work/"]
    path = ~/.dotfiles/git/Work/.gitconfig
